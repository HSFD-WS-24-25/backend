# ===========================
# General Configuration
# ===========================

# Port for the Express server (default: 3001)
PORT=<port>

# Application environment (e.g., development, production)
APP_ENV=development

# Backend application URL
APP_URL=<your_app_url>

# Frontend client URL
CLIENT_URL=<your_client_url>

# ===========================
# Database Configuration
# ===========================

# Database connection string
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<database_name>

# ===========================
# Auth0 Configuration
# ===========================

# Auth0 audience URL
AUTH0_AUDIENCE=<audience_url_from_auth0_dashboard>

# Auth0 issuer base URL
AUTH0_ISSUER_BASE_URL=<issuer_base_url_from_auth0_dashboard>

# ===========================
# Azure communication services
# ===========================

# Connection string
COMMUNICATION_SERVICES_CONNECTION_STRING=<azure_communication_services_connection_string>

# Sender email
COMMUNICATION_SERVICES_SENDER_EMAIL=<sender_email@domain.com>

# ===========================
# Notes
# ===========================

# Replace placeholders (e.g., <port>, <your_app_url>) with actual values.
# DO NOT COMMIT this file with real credentials!